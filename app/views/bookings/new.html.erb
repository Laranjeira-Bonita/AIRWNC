


<div class="new-booking-form">
<h1>Make your booking here</h1>
<%= simple_form_for [@bathroom, @booking] do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
<%= f.input :date %>
<%= f.input :duration, collection: [15, 20, 25, 30, 35, 40, 45] %>
</div>

<div class="form-actions btn btn-block" id="new-booking-submit-button">
<%= f.button :submit %>
</div>
<% end %>
</div>

