<div class="container">
  <div class="row justify-content-center">

    <div class="bath-form col-12 col-lg-8">
      <%= simple_form_for(bathroom) do |f| %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :price %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit "Submit", class: "btn-form" %>
      <% end %>
    </div>

  </div>
</div>