<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>

<div>
    <h1>Leave your opinion here</h1>
    <%= simple_form_for [@booking.bathroom, @booking, @review] do |f| %>
        <div class="form-inputs">
          <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
          <%= f.input :content %>
        </div>

        <div class="form-actions btn btn-block" id="new-booking-submit-button">
        <%= f.button :submit %>
        </div>
    <% end %>
</div>